{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Create your blog content"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text",
      "maxLength": 80
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "articles"
    },
    "metaFields": {
      "type": "component",
      "repeatable": false,
      "component": "meta-fields.meta-fields"
    },
    "timeToRead": {
      "type": "string"
    },
    "articleSummary": {
      "type": "text"
    },
    "articleContent": {
      "type": "dynamiczone",
      "components": [
        "article-components.rich-text-json",
        "article-components.image-descriptions",
        "article-components.video-url"
      ],
      "required": true
    },
    "socialIcons": {
      "type": "component",
      "repeatable": true,
      "component": "shared.media",
      "required": true,
      "max": 4,
      "min": 1
    },
    "postedOn": {
      "type": "date"
    },
    "relatedArticles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article"
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    }
  }
}
